<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">註冊</h2>
  <%= f.text_field :name, autofocus: true, placeholder: "用戶名稱", hide_label: true,  icon: "user" %>

  <%= f.email_field :email, placeholder: "Email", hide_label: true, icon: "envelope" %>

  <%= f.password_field :password, autocomplete: "off", 
    placeholder: "密碼 （至少" << @minimum_password_length.to_s << "個字元）", hide_label: true, icon: "lock"  %>

  <p> <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "密碼確認", hide_label: true, icon: "lock" %> </p>

  <%= f.submit "註冊", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
  <%= devise_error_messages! %>
<% end %>


