<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin" }) do |f| %>
<h2>編輯我的帳戶資料 <%  resource_name.to_s.humanize %></h2>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :password, "新密碼" %> <i>(如不想變更，請留白)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <div><%= f.label :password_confirmation, "密碼確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

  <div><%= f.label :current_password, "舊密碼" %> <i>(需要您目前的密碼來認證此變更)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %></div>

  <div>
    <%= f.submit "變更", class: "btn btn-primary" %>
    <%= link_to "取消", :back, class: "btn btn-default pull-right" %>
  </div>

  <br />
<h3>刪除我的帳戶</h3>

<p> 不滿意? <%= button_to "刪除我的帳戶", registration_path(resource_name), data: { confirm: "確定刪除帳戶？" }, method: :delete, class: "btn btn-danger" %> </p>

<% end %>
