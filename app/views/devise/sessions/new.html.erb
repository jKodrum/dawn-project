<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">登入</h2>
  <%= f.email_field :email, autofocus: true, placeholder: "Email", icon: "envelope" %>

  <%= f.password_field :password, autocomplete: "off", placeholder: "密碼", icon: "lock" %>

  <% if devise_mapping.rememberable? %>
    <div><%= f.check_box :remember_me %> <%= f.label :"記住我"%></div>
  <% end %>

  <%= f.submit "登入", class: "btn btn-lg btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
  <%= f.label "或者" %>
  <%= link_to "Facebook登入", user_omniauth_authorize_path(:facebook), class: "btn btn-info btn-block" %>

  <%= flash_tag %>
<% end %>

