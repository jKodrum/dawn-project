<% content_for :search_body do %>
  <%= will_paginate @jobs, style: "align-text: center;" %>
  <div id="map" style='width: 100%; height: 500px;'></div>
  <br>
  <table class="table table-striped table-hover table-condense"> 
    <thead> 
      <tr class="info"> 
        <td> 最新更新 </td>
        <td> 志工服務 </td>
        <td> 地點 </td>
      </tr>
    </thead>
    <tbody> 
    <%= render partial: 'jobs/job_list', collection: @jobs, as: :job, locals: {length: 26} %>
    </tbody>
  </table>
  <%= will_paginate @jobs, style: "align-text: center;" %>
<% end %>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<%= render 'search' %>

<script type="text/javascript">
  initGmaps(<%= raw @hash.to_json %>)
</script>
