<div class="media">
  <!-- Commenter Image -->
  <div class="pull-left">
  <%= link_user_image_tag comment.commenter %>
  </div>
  <!-- Delete Comment -->
  <% if current_user==comment.commenter || current_user.try(:admin) %>
    <div class="btn-group pull-right">
      <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" role="button" >
        <i class="glyphicon glyphicon-cog"></i> <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
        <li> <%= link_to "刪除留言", "#", method: :delete, data: { confirm: "確定刪除？"} %> </li>
      </ul>
    </div>
  <% end %>
  <div class="media-body">
    <!-- Commenter and Date -->
    <p> <%= link_to comment.commenter.name, user_profile_path(comment.commenter.name, comment.commenter.id) %>
      <small style="color: #aaaaaa;"> <%= comment.created_at.localtime.strftime("%m/%d %a, %Y at %R") %> </small>
    </p>
    <!-- Comment Body -->
    <%= simple_format comment.content %>
  </div>
</div>
